<Window x:Class="DemoWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="909" FontFamily="Times New Roman" Icon="/Icon.ico">
    <Grid>
        <Label x:Name="fioLabel" Content="Гость" 
               HorizontalAlignment="Right" 
               Margin="0,10,10,0"
               FontFamily="Times New Roman"
               VerticalAlignment="Top"/>
        <Button x:Name="backButton" Content="Выйти" 
                HorizontalAlignment="Left" 
                Margin="10,10,0,0" 
                VerticalAlignment="Top" 
                Height="26" 
                Width="64" 
                Background="{DynamicResource AccentBrush}" Click="backButton_Click"/>


        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="85,50,10,10" Width="800">
            <StackPanel x:Name="ItemsPanel" Orientation="Vertical" HorizontalAlignment="Center"/>
        </ScrollViewer>
        <Button x:Name="Add" Content="Назад" 
            HorizontalAlignment="Left" 
            Margin="10,50,0,0" 
            VerticalAlignment="Top" 
            Height="26" 
            Width="64" 
            Background="{DynamicResource AccentBrush}" Click="backButton_Click"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="111,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" Height="26" TextChanged="SearchBox_TextChanged" FontSize="18"/>




    </Grid>
</Window>
