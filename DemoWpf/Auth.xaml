<Window x:Name="AuthForm" x:Class="DemoWpf.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoWpf"
        mc:Ignorable="d"
        Background="{StaticResource MainBackgroundBrush}"
        Title="Авторизация" Height="342" Width="246" FontFamily="Times New Roman" FontSize="14" Icon="/Icon.ico">
    <Grid VerticalAlignment="Center" Margin="0,0,0,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox 
            x:Name="loginBox" 
            HorizontalAlignment="Center" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            VerticalAlignment="Center" 
            Width="147" 
            Height="30"/>
        <PasswordBox 
            x:Name="passwordBox" 
            Width="147" 
            Height="30" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Grid.Row="2"/>
        <Button 
            x:Name="enterButton" 
            Width="147" 
            Height="30" 
            Content="Войти" 
            HorizontalAlignment="Center"  
            Grid.Row="3" 
            VerticalAlignment="Center" 
            Click="enterButton_Click" 
            FontSize="14" 
            FontFamily="Times New Roman"
            Background="{StaticResource AccentBrush}"/>
        <Button 
            x:Name="guestButton" 
            Width="147" 
            Height="30" 
            Content="Войти как гость" 
            HorizontalAlignment="Center" 
            Grid.Row="4" 
            VerticalAlignment="Center" 
            Click="guestButton_Click" 
            FontFamily="Times New Roman"
            Background="{StaticResource AccentBrush}"/>
        <Image x:Name="image" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Grid.Row="0" Margin="0,0,0,0" Source="/Icon.JPG"/>


    </Grid>
</Window>
